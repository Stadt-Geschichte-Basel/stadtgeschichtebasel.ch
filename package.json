{
	"name": "stadtgeschichtebasel.ch",
	"description": "The open source code of the digital portal of Stadt.Geschichte.Basel.",
	"author": "Moritz MÃ¤hr <moritz.maehr@gmail.com>",
	"version": "0.0.1",
	"url": "https://github.com/Stadt-Geschichte-Basel/stadtgeschichtebasel.ch/issues",
	"license": "AGPL-3.0",
	"engines": {
		"node": ">=18",
		"pnpm": ">=8"
	},
	"private": true,
	"packageManager": "pnpm@8.6.6",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"test": "playwright test",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"commit": "cz",
		"prepare": "husky install",
		"prebuild": "node src/lib/prepareData.js",
		"postbuild": "npx svelte-sitemap --out-dir .svelte-kit/cloudflare --domain https://beta.stadtgeschichtebasel.ch"
	},
	"devDependencies": {
		"@playwright/test": "^1.36.0",
		"@skeletonlabs/skeleton": "^1.9.0",
		"@sveltejs/adapter-auto": "^2.1.0",
		"@sveltejs/kit": "^1.22.3",
		"@tailwindcss/forms": "^0.5.3",
		"@tailwindcss/typography": "^0.5.9",
		"@vite-pwa/sveltekit": "^0.2.5",
		"autoprefixer": "^10.4.14",
		"cheerio": "1.0.0-rc.12",
		"eslint": "^8.44.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte": "^2.32.2",
