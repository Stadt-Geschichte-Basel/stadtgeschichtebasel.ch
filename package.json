		"prettier-plugin-tailwindcss": "^0.2.8",
		"svelte": "^3.58.0",
		"svelte-check": "^3.2.0",
		"svelte-preprocess": "^5.0.3",
		"svelte-sitemap": "^2.6.0",
		"tailwindcss": "^3.3.2",
		"typescript": "^5.0.4",
