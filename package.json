		"js-yaml": "^4.1.0",
		"jsdom": "^22.1.0",
		"mdsvex": "^0.11.0",
		"postcss": "^8.4.25",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"prettier-plugin-tailwindcss": "^0.2.8",
		"rehype-mdsvex-image-autoimport": "^1.1.0",
		"srcset": "^5.0.0",
		"svelte": "^4.0.5",
		"svelte-check": "^3.4.6",
		"svelte-maplibre": "^0.3.2",
		"svelte-sitemap": "^2.6.0",
		"tailwindcss": "^3.3.2",
		"turndown": "^7.1.2",
		"typescript": "^5.1.6",
		"vite": "^4.4.3",
		"vite-imagetools": "^5.0.5",
		"vite-plugin-lightningcss": "^0.0.5",
