{
	"name": "stadtgeschichtebasel.ch",
	"description": "The open source code of the digital portal of Stadt.Geschichte.Basel.",
	"author": "Moritz MÃ¤hr <moritz.maehr@gmail.com>",
	"version": "0.0.1",
	"url": "https://github.com/Stadt-Geschichte-Basel/stadtgeschichtebasel.ch/issues",
	"license": "AGPL-3.0",
	"engines": {
		"node": ">=16",
		"pnpm": ">=8"
	},
	"private": true,
	"packageManager": "pnpm@8.4.0",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"test": "playwright test",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"commit": "cz",
		"prepare": "husky install",
		"postbuild": "npx svelte-sitemap --out-dir .svelte-kit/cloudflare --domain https://beta.stadtgeschichtebasel.ch"
	},
	"devDependencies": {
		"@playwright/test": "^1.35.1",
		"@skeletonlabs/skeleton": "^1.9.0",
		"@sveltejs/adapter-auto": "^2.1.0",
		"@sveltejs/adapter-static": "^2.0.2",
		"@sveltejs/kit": "^1.22.0",
		"@tailwindcss/forms": "^0.5.3",
		"@tailwindcss/typography": "^0.5.9",
		"autoprefixer": "^10.4.14",
		"cssnano": "^6.0.1",
		"eslint": "^8.44.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte": "^2.32.2",
		"husky": "^8.0.3",
		"jsdom": "^22.1.0",
		"postcss": "^8.4.25",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"prettier-plugin-tailwindcss": "^0.2.8",
		"srcset": "^5.0.0",
		"svelte": "^4.0.4",
		"svelte-check": "^3.4.5",
		"svelte-maplibre": "^0.3.2",
		"svelte-sitemap": "^2.6.0",
		"tailwindcss": "^3.3.2",
		"typescript": "^5.1.6",
		"vite": "4.3.9",
		"vitest": "^0.25.8",
		"xml2js": "^0.6.0"
	},
	"type": "module"
}
