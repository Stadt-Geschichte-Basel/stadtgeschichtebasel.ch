		"js-yaml": "^4.1.0",
		"jsdom": "^24.1.0",
		"mdsvex": "^0.11.2",
		"node-fetch": "^3.3.2",
		"postcss": "^8.4.39",
		"prettier": "^3.3.2",
		"prettier-plugin-organize-imports": "^4.0.0",
		"prettier-plugin-svelte": "^3.2.5",
		"prettier-plugin-tailwindcss": "^0.6.5",
		"rehype-autolink-headings": "^7.1.0",
		"rehype-external-links": "^3.0.0",
		"rehype-slug": "^6.0.0",
		"remark-captions": "^2.2.4",
		"svelte": "^4.2.18",
		"svelte-check": "^3.8.4",
		"svelte-maplibre": "^0.9.8",
		"tailwindcss": "^3.4.4",
		"turndown": "^7.2.0",
