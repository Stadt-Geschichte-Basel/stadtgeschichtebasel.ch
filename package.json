		"husky": "^9.0.11",
		"js-yaml": "^4.1.0",
		"jsdom": "^24.0.0",
		"mdsvex": "^0.11.0",
		"node-fetch": "^3.3.2",
		"postcss": "^8.4.35",
		"prettier": "^3.2.5",
		"prettier-plugin-organize-imports": "^3.2.4",
		"prettier-plugin-svelte": "^3.2.2",
		"prettier-plugin-tailwindcss": "^0.5.12",
		"rehype-autolink-headings": "^7.1.0",
		"rehype-external-links": "^3.0.0",
		"rehype-slug": "^6.0.0",
		"remark-captions": "^2.2.3",
		"svelte": "^4.2.12",
		"svelte-check": "^3.6.7",
		"svelte-maplibre": "^0.8.2",
		"tailwindcss": "^3.4.1",
		"turndown": "^7.1.2",
		"typescript": "^5.4.2",
